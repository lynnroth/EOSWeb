@code {

    Hub Hub = Hub.Default;
    private bool hidden = false;

    protected override void OnInitialized()
    {
        base.OnInitialized();

        Hub.Subscribe<UIToggle>((u) =>
        {
            InvokeAsync(() =>
            {
                if (u.Key == "Keyboard")
                {
                    hidden = u.Hidden;
                }
                StateHasChanged();

            });
        });
    }
}
